<% include ./partials/header.ejs %>

<div class="container-fluid">
    <div class="row">
        <% include ./partials/navbar.ejs %>

        <script>
            // Sets the current page as active in navbar
            document.getElementById('info-link').classList.add('active');
            document.getElementById('active-box-info').classList.add('navigation-link-left-box');
        </script>

        <div class="col-md-9 col-lg-10 ml-sm-auto pt-3" id="main-content">
            <div class="container">
                <h1 class="display-4 py-3 heading-font">Info</h1>

                <div class="row">
                    <div class="col-md-7">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h4 class="heading-card heading-font mb-3"> Internet Access</h4>
                                <div class="card-text">
                                    <table>
                                        <tr>
                                            <td style="width: 15rem;">Network SSID:</td>
                                            <td><%=info.wifi.network%></td>
                                        </tr>
                                        <tr>
                                            <td>Password: </td>
                                            <td><%=info.wifi.password%></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h4 class="heading-card heading-font mb-3"> Contacts</h4>
                                <div class="card-text">
                                    <table>
                                        <tr>
                                            <td style="width: 15rem;">Emergency:</td>
                                            <td>911</td>
                                        </tr>
                                        <tr>
                                            <td>Carleton University Police: </td>
                                            <td><%=info.emergency%></td>
                                        </tr>
                                        <tr>
                                            <td>cuHacking: </td>
                                            <td>info@cuhacking.com</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h4 class="heading-card heading-font mb-3"> Help</h4>
                                <div class="card-text">
                                    <%=info.help%>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h4 class="heading-card heading-font mb-3"> Social</h4>
                                <div class="card-text" style="font-size: large;">
                                    <table>
                                        <tr>
                                            <td style="width: 15rem;"><a style="color:#9756D8;"
                                                    href=<%=info.social.slack%> target="_blank"> <i
                                                        class="fab fa-slack"></i>
                                                    &nbsp;&nbsp; Join Slack Here!</a>
                                            </td>
                                            <td><a style="color:#9756D8;" href="http://facebook.com/cuhacking"
                                                    target="_blank"> <i class="fab fa-facebook-square"></i>
                                                    &nbsp;&nbsp; Facebook</td></a>
                                        </tr>
                                        <tr>
                                            <td><a style="color:#9756D8;" href="http://instagram.com/cuHacking"
                                                    target="_blank"> <i class="fab fa-instagram"></i>
                                                    &nbsp;&nbsp; Instagram</td></a>
                                            <td><a style="color:#9756D8;" href="http://twittter.com/cuHacking"
                                                    target="_blank"> <i class="fab fa-twitter-square"></i>
                                                    &nbsp;&nbsp; Twitter</td> </a>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>